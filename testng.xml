<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="JavaSeleniumHubSuite" parallel="tests" thread-count="4">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        <listener class-name="pl.devqa.javaseleniumhub.listeners.AllureTestListener"/>
    </listeners>

    <test name="SmokeTests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="pl.devqa.javaseleniumhub.tests.smoke.BaseSmokeTest"/>
        </classes>
    </test>
    <test name="RegressionTests">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
<!--        <classes>-->
<!--            <class name="pl.devqa.javaseleniumhub.tests.regression.HomeRegTest"/>-->
<!--        </classes>-->
    </test>
</suite>

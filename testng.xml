<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="JavaSeleniumHubSuite"
       parallel="tests"
       thread-count="4"
       preserve-order="true">

    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        <listener class-name="pl.devqa.javaseleniumhub.listeners.AllureTestListener"/>
    </listeners>

    <!-- Jeden "test" obejmujący całą przestrzeń testów;
         faktyczne uruchomienie zawęzimy z CLI przez -Dgroups / -DexcludedGroups -->
    <test name="AllTests">
        <packages>
            <package name="pl.devqa.javaseleniumhub.tests"/>
        </packages>
    </test>
</suite>
